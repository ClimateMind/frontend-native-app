{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./*"],
      "@features/*": ["features/*"],
      "@shared/*": ["shared/*"]
    },
    
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "coverage",
    "android",
    "ios",
    "dist",
    ".storybook"
  ]
}
